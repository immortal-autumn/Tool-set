<view class="page-body">
  <view class="page-section">

    <view class="weui-cells__title">分组</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <input class="weui-input" maxlength="50" auto-focus placeholder="组别" bindinput="group"/>
      </view>
    </view>

    <view class="weui-cells__title">礼包码</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <input class="weui-input" maxlength="50" auto-focus placeholder="礼包码" bindinput="code"/>
      </view>
    </view>

  <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
      disabled="{{disabled}}" bindtap="submission" hover-class="other-button-hover" class="submit"> 领取</button> 
  </view>

  <!--results-->
  <view class="lists">
    <text>领取失败的UIDs:\n</text>
    <text>{{failedList}}</text>
  </view>
</view>
